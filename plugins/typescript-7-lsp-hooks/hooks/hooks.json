{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/start-lsp.sh\"",
            "timeout": 10,
            "statusMessage": "Starting TypeScript LSP..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/check-ts-diagnostics.mjs\"",
            "timeout": 5,
            "statusMessage": "Checking TypeScript..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/stop-lsp.sh\"",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
