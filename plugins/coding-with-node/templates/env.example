# =============================================================================
# Environment Variables
#
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env to version control — only this template.
# =============================================================================

# --- Application ---

# Runtime environment: development | staging | production
NODE_ENV=development

# Server port
PORT=3000

# Bind address (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
HOST=0.0.0.0

# Log level: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# --- Database ---

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# --- Redis ---

# Redis connection string (used for caching, sessions, queues, etc.)
REDIS_URL=redis://localhost:6379

# --- Authentication ---

# Secret for signing JWTs — use a long random string in production
# Generate with: node -e "console.log(crypto.randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-in-production

# Secret for signing session cookies
SESSION_SECRET=change-me-in-production

# --- External APIs ---

# Add your API keys here. Keep them out of source code.
# API_KEY=your-api-key-here
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...

# --- Feature Flags ---

# Toggle features without redeploying
# ENABLE_FEATURE_X=true
# ENABLE_BETA_UI=false
